@model RegisterVM

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9 col-sm-11">
                <form asp-action="Register" method="post">
                    <div class="login-form p-4 shadow rounded bg-white">
                        <h4 class="login-title text-center mb-3">Register</h4>

                        <div class="row g-2">
                            <!-- FullName / UserName -->
                            <div class="col-md-6">
                                <label class="form-label small mb-1">FullName</label>
                                <input asp-for="FullName" type="text"
                                       class="form-control form-control-sm"
                                       placeholder="FullName" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label small mb-1">UserName</label>
                                <input asp-for="UserName" type="text"
                                       class="form-control form-control-sm"
                                       placeholder="UserName" />
                            </div>

                            <!-- Email -->
                            <div class="col-12">
                                <label class="form-label small mb-1">Email Address *</label>
                                <input asp-for="Email" type="email"
                                       class="form-control form-control-sm"
                                       placeholder="Email Address" />
                            </div>

                            <!-- Password -->
                            <div class="col-md-6">
                                <label class="form-label small mb-1">Password</label>
                                <input asp-for="Password" type="password"
                                       class="form-control form-control-sm"
                                       placeholder="Password" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label small mb-1">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password"
                                       class="form-control form-control-sm"
                                       placeholder="Confirm Password" />
                            </div>

                            <!-- Button -->
                            <div class="col-12 mt-3">
                                <button type="submit"
                                        class="btn btn-custom-size btn-pronia-primary w-100">
                                    Register
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
