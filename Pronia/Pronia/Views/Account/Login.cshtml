@model LoginVM

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <form asp-action="Login" method="post">
                    <div class="login-form p-4 shadow rounded bg-white">
                        <h4 class="login-title text-center mb-4">Login</h4>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label">UserName *</label>
                                <input asp-for="UserName" class="form-control" placeholder="Username" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="col-12 mb-3">
                                <label class="form-label">Password *</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Remember me + Forgot password -->
                            <div class="col-12 d-flex justify-content-between align-items-center">
                                <!-- Remember me -->
                                <div class="d-flex align-items-center gap-2">
                                    <input asp-for="RememberMe" type="checkbox" id="remember_me" style="width:16px;height:16px;">
                                    <label for="remember_me" class="mb-0">
                                        Remember me
                                    </label>
                                </div>

                                <!-- Forgot password -->
                                <a href="#"
                                   class="text-decoration-none"
                                   style="white-space:nowrap;">
                                    Forgot password?
                                </a>
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit"
                                        class="btn btn-custom-size lg-size btn-pronia-primary w-100">
                                    Login
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
